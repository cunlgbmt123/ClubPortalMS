@model ClubPortalMS.Models.ThanhVien

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="content-header" style="background-color: cornflowerblue">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Hồ sơ người dùng</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li style="color:black" class="breadcrumb-item">Trang Chủ</li>
                        <li style="color:black" class="breadcrumb-item active">Hồ sơ người dùng</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <div class="form-edit-profile">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Ten, "Tên:", htmlAttributes: new { @class = "edit-profile" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = " input-edit" } })
                @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ho, "Họ và tên đệm:", htmlAttributes: new { @class = " edit-profile" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ho, new { htmlAttributes = new { @class = "input-edit" } })
                @Html.ValidationMessageFor(model => model.Ho, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgaySinh, "Ngày Sinh:", htmlAttributes: new { @class = " edit-profile" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "input-edit" } })
                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MSSV, "Mã số sinh viên:", htmlAttributes: new { @class = "edit-profile" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MSSV, new { htmlAttributes = new { @class = "input-edit " } })
                @Html.ValidationMessageFor(model => model.MSSV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Lop, "Lớp:", htmlAttributes: new { @class = " edit-profile" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Lop, new { htmlAttributes = new { @class = "input-edit" } })
                @Html.ValidationMessageFor(model => model.Lop, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SDT, "Số điện thoại:", htmlAttributes: new { @class = "edit-profile" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "input-edit" } })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu lại" class="btn btn-default btn-edit" />
            </div>
        </div>
    </div>
}

