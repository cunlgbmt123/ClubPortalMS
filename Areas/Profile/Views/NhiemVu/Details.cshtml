@model ClubPortalMS.Models.NhiemVu_ThanhVien

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
}

<div class="card-body">
    @using (Html.BeginForm(null, null, System.Web.Mvc.FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div>
            <h4>NhiemVu</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayFor(model => model.IdNv)
                Tiêu đề:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NhiemVu.TieuDe)
            </dd>

            <dt>
                Mô tả:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NhiemVu.MoTa)
            </dd>
            <dt>
                Thời gian kết thúc:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NhiemVu.ThoiGianKetThuc)
            </dd>
            <dt>
                Ghi chú:
            </dt>

            <dd>
                @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
            </dd>
            @{
                DateTime FinishTime = Model.NhiemVu.ThoiGianKetThuc;
                int result = DateTime.Compare(FinishTime, DateTime.Now);

                if (result > 0)
                {
                    <dt>
                        File bài làm:
                    </dt>
                    if (Model.FileNop == null)
                    {
                        <dd>
                            <div class="form-group">
                                @Html.LabelFor(model => model.FileNop, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input type="file" id="upload" name="upload" />
                                    @Html.ValidationMessageFor(model => model.FileNop, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </dd>
                    }
                    else
                    {
                        <dd>
                            <a href=@Url.Action("DocumentDownload","NhiemVu", new { id = Model.ID})>@Model.TenFileNop</a>
                            <p>Tải lên file khác(Thay thế file ở trên):</p>
                            <input type="file" id="upload" name="upload" />
                            @Html.ValidationMessageFor(model => model.FileNop, "", new { @class = "text-danger" })
                        </dd>
                    }

                    <div class="form-group">
                        <input type="submit" value="Lưu chỉnh sửa" class="btn btn-default" />
                    </div>
                }
                else
                {
                    <dt>
                        File bài làm:
                    </dt>
                    if (Model.FileNop == null)
                    {
                        <dd>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <p>Chưa nộp bài</p>
                                </div>
                            </div>
                        </dd>
                    }
                    else
                    {
                        <dd>
                            <a href=@Url.Action("DocumentDownload","NhiemVu", new { id = Model.ID})>@Model.TenFileNop</a>
                        </dd>
                    }
                    <p style="color:#ff0000">Đã hết hạn nộp</p>
                    <div class="form-group">
                        <input disabled="disabled" type="submit" value="Lưu chỉnh sửa" class="btn btn-default" />
                    </div>
                }
            }

        </dl>
        </div>
    }
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>