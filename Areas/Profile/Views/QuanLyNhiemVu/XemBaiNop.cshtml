@model IList<ClubPortalMS.Models.ViewModel1>
@{
    //var DsthanhVienHD = (IList<ClubPortalMS.Models.DiemDanhCLBViewModel>)ViewBag.DsthanhVienHD;
    ViewBag.Title = "Quản lý nhiệm vụ";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
    string[] TableHeaders = new string[] {"STT","Tiêu đề"
                        ,"Tên"
                        ,"MSSV"
                        ,"File nộp"
                        };
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý câu lạc bộ</h1>
            </div>
        </div>
    </div>
</section>
@using (Html.BeginForm("XemBaiNop", "QuanLyNhiemVu", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="callout callout-info">
                        <h5><i class="fas fa-list"></i> Xem chi tiết:</h5>
                        Đây là trang xem chi tiết cho nhiệm vụ
                    </div>
                    <div class="invoice p-3 mb-3">
                        <div class="row">
                            <div class="col-12 table table-responsive">
                                <table id="myTable" class="table table-striped table table-bordered table-hover table-sm">
                                    <thead>
                                        <tr>
                                            @foreach (var head in TableHeaders)
                                            {
                                                <th>
                                                    @head
                                                </th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                            {
                                            <tr>
                                                <td>@item.NhiemVu_ThanhVien.ID</td>
                                                <td>@item.NhiemVu_ThanhVien.NhiemVu.TieuDe</td>
                                                <td>@item.ThanhVien_CLB.ThanhVien.Ho @item.ThanhVien_CLB.ThanhVien.Ten</td>
                                                <td>@item.ThanhVien_CLB.ThanhVien.MSSV</td>
                                                @if (item.NhiemVu_ThanhVien.FileNop == null)
                                                {
                                                    <td>Chưa nộp</td>
                                                }
                                                else
                                                {
                                                    <td><a href="@Url.Action("DocumentExDownload", "QuanLyNhiemVu", new { id = item.NhiemVu_ThanhVien.ID })" class="link-black text-sm"><i class="fas fa-link mr-1"></i>>@item.NhiemVu_ThanhVien.TenFileNop</a></td>

                                                }
                                            </tr>
                                            }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
