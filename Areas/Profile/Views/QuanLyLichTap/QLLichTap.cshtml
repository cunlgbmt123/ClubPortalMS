@using PagedList.Mvc;
@using PagedList;

@{
    var DsLichTap = (IPagedList<ClubPortalMS.Models.ViewModel1>)ViewBag.DsLichTap;
    ViewBag.Title = "Quản lý lịch tập";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
    string[] TableHeaders = new string[] {"STT","Tiêu đề"
                        ,"Ngày bắt đầu"
                        ,"Ngày kết thúc"
                        ,"Địa điểm"
                        ,"Tác vụ"
                        };
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý câu lạc bộ</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="callout callout-info">
                    <h5><i class="fas fa-list"></i> Danh sách Lịch tập:</h5>
                    Đây là trang quản lý các lịch tập của câu lạc bộ của bạn
                </div>
                <div class="invoice p-3 mb-3">
                    <div class="row">
                        <div class="col-12 table table-responsive">
                            <table id="myTable" class="table table-striped table table-bordered table-hover table-sm">
                                <thead>
                                    <tr>
                                        @foreach (var head in TableHeaders)
                                        {
                                            <th>
                                                @head
                                            </th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.DsLichTap)
                                    {
                                    <tr>
                                        <td>@item.LichTap.ID</td>
                                        <td>@item.LichTap.TieuDe</td>
                                        <td>@item.LichTap.NgayBatDau</td>
                                        <td>@item.LichTap.NgayKetThuc</td>
                                        <td>@item.LichTap.DiaDiem</td>
                                        <td>
                                            @Html.ActionLink("Xem", "XemLT", new { id = item.LichTap.ID }) |
                                            @Html.ActionLink("Sửa", "SuaLT", new { id = item.LichTap.ID }) |
                                            @Html.ActionLink("Xóa", "XoaLT", new { id = item.LichTap.ID })                                         
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>

                            @Html.PagedListPager(DsLichTap, page => Url.Action("QLLichTap", new { page, id = ViewBag.idCLB }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

