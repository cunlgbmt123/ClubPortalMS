@using PagedList.Mvc;
@using PagedList;

@{
    var DsPhanHoi = (IPagedList<ClubPortalMS.Models.ViewModel1>)ViewBag.DsPhanHoi;
    ViewBag.Title = "QLThongBao";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
    string[] TableHeaders = new string[] {"STT","Thành viên phản hồi"
                        ,"Nội dung phản hồi"
                        ,"Ngày gửi"
                        ,"Email"
                        ,"Số điện thoại"
                        ,"Địa chỉ"
                        ,"Tác vụ"
                        };
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Câu lạc bộ</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="callout callout-info">
                    <h5><i class="fas fa-list"></i> Danh sách Thông báo:</h5>
                    Đây là trang quản lý các thông báo của câu lạc bộ của bạn
                </div>
                <div class="invoice p-3 mb-3">
                    <div class="row">
                        <div class="col-12 table table-responsive">
                            <table id="myTable" class="table table-striped table table-bordered table-hover table-sm">
                                <thead>
                                    <tr>
                                        @foreach (var head in TableHeaders)
                                        {
                                            <th>
                                                @head
                                            </th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.DsPhanHoi)
                                    {
                                    <tr>
                                        <td>@item.PhanHoi.ID</td>
                                        <td>@item.PhanHoi.Ten</td>
                                        <td>@item.PhanHoi.NoiDung</td>
                                        <td>@item.PhanHoi.TGphanhoi</td>
                                        <td>@item.PhanHoi.Email</td>
                                        <td>@item.PhanHoi.SDT</td>
                                        <td>@item.PhanHoi.DiaChi</td>
                                        <td>
                                            @Html.ActionLink("Xem", "XemPH", new { id = item.PhanHoi.ID }) |
                                            @Html.ActionLink("Xóa", "XoaPH", new { id = item.PhanHoi.ID })
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                           </table>
                            @Html.PagedListPager(DsPhanHoi, page => Url.Action("QLPhanHoi", new { page, id = ViewBag.idCLB }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

