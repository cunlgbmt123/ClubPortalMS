@using PagedList.Mvc;
@using PagedList;

@{
    var DsThongBao = (IPagedList<ClubPortalMS.Models.ThongBaoViewModel>)ViewBag.DsThongBao;
    ViewBag.Title = "QLThongBao";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
    string[] TableHeaders = new string[] {"STT","Tiêu đề"
                        ,"Mô tả"
                        ,"Ngày phát hành"
                        ,"Nội dung"
                        ,"File đính kèm"
                        ,"Tác vụ"
                        };
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Câu lạc bộ</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="callout callout-info">
                    <h5><i class="fas fa-list"></i> Danh sách Thông báo:</h5>
                    Đây là trang quản lý các thông báo của câu lạc bộ của bạn
                </div>
                <div class="invoice p-3 mb-3">
                    <div class="row">
                        <div class="col-12 table table-responsive">
                            <table id="myTable" class="table table-striped table table-bordered table-hover table-sm">
                                <thead>
                                    <tr>
                                        @foreach (var head in TableHeaders)
                                        {
                                            <th>
                                                @head
                                            </th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.DsThongBao)
                                    {
                                    <tr>
                                        <td>@item.ThongBao.ID</td>
                                        <td>@item.ThongBao.TieuDe</td>
                                        <td>@item.ThongBao.MoTa</td>
                                        <td>@item.ThongBao.NgayThongBao</td>
                                        <td>@item.ThongBao.NoiDung</td>
                                        @if(item.ThongBao.File == null) 
                                        {
                                             <td>Trống </td>
                                        }
                                        else
                                        {
                                            <td>@item.ThongBao.TenFile</td>
                                        }

                                        <td>
                                            @Html.ActionLink("Xem", "XemChiTietTB", new { id = item.ThongBao.ID }) |
                                            @Html.ActionLink("Sửa", "SuaTB", new { id = item.ThongBao.ID }) |
                                            @Html.ActionLink("Xóa", "XoaTB", new { id = item.ThongBao.ID })
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>

                            @Html.PagedListPager(DsThongBao, page => Url.Action("QLThongBao", new {page,id = ViewBag.idCLB }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

