@using PagedList.Mvc;
@using PagedList;

@{
    var DsSuKien = (IPagedList<ClubPortalMS.Models.ViewModel1>)ViewBag.DsSuKien;
    ViewBag.Title = "Quản lý sự kiện";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
    string[] TableHeaders = new string[] {"STT","Tiêu đề"
                        ,"Mô tả"
                        ,"Ngày bắt đầu"
                        ,"Ngày kết thúc"
                        ,"Nội dung"
                        ,"Địa điểm"
                        ,"Loại hoạt động"
                        ,"File đính kèm"                       
                        ,"Tác vụ"
                        };
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý câu lạc bộ</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="callout callout-info">
                    <h5><i class="fas fa-list"></i> Danh sách Thông báo:</h5>
                    Đây là trang quản lý các thông báo của câu lạc bộ của bạn
                </div>
                <div class="invoice p-3 mb-3">
                    <div class="row">
                        <div class="col-12 table table-responsive">
                            <table id="myTable" class="table table-striped table table-bordered table-hover table-sm">
                                <thead>
                                    <tr>
                                        @foreach (var head in TableHeaders)
                                        {
                                            <th>
                                                @head
                                            </th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.DsSuKien)
                                    {
                                    <tr>
                                        <td>@item.SuKien.ID</td>
                                        <td>@item.SuKien.TieuDeSK</td>
                                        <td>@item.SuKien.MoTa</td>
                                        <td>@item.SuKien.NgayBatDau</td>
                                        <td>@item.SuKien.NgayKetThuc</td>
                                        <td>@item.SuKien.NoiDung</td>
                                        <td>@item.SuKien.DiaDiem</td>
                                        <td>@item.SuKien.LoaiSuKien.TenLoaiSK</td>

                                        @if (item.SuKien.File == null)
                                        {
                                            <td>Trống </td>
                                        }
                                        else
                                        {
                                            <td>@item.SuKien.TenFile</td>
                                        }

                                        <td>
                                            @Html.ActionLink("Xem", "XemSK", new { id = item.SuKien.ID }) |
                                            @Html.ActionLink("Sửa", "SuaSK", new { id = item.SuKien.ID }) |
                                            @Html.ActionLink("Xóa", "XoaSK", new { id = item.SuKien.ID }) |
                                            @Html.ActionLink("Điểm danh", "DiemDanh", new { id = item.SuKien.ID , id2=item.ThanhVien_CLB.IDCLB})
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>

                            @Html.PagedListPager(DsSuKien, page => Url.Action("QLSuKien", new { page, id = ViewBag.idCLB }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

