@model IList<ClubPortalMS.Models.DiemDanhCLBViewModel>
@{

    ViewBag.Title = "Quản lý hoạt động";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
    string[] TableHeaders = new string[] {"STT","MSSV"
                        ,"Tên"
                        ,"Điểm danh"
                        };
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý câu lạc bộ</h1>
            </div>
        </div>
    </div>
</section>
@using (Html.BeginForm("DiemDanh", "QuanLySuKien", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="callout callout-info">
                        <h5><i class="fas fa-list"></i> Điểm danh:</h5>
                        Đây là trang điểm danh cho Sự kiện
                    </div>
                    <div class="invoice p-3 mb-3">
                        <div class="row">
                            <div class="col-12 table table-responsive">
                                <table id="myTable" class="table table-striped table table-bordered table-hover table-sm">
                                    <thead>
                                        <tr>
                                            @foreach (var head in TableHeaders)
                                            {
                                                <th>
                                                    @head
                                                </th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Count; i++)
                                        {
                                            <tr>
                                                <td>@Model[i].ID</td>
                                                @Html.HiddenFor(model => Model[i].ID)
                                                <td>@Model[i].ThanhVien_CLB.ThanhVien.MSSV</td>
                                                <td>@Model[i].ThanhVien_CLB.ThanhVien.Ho @Model[i].ThanhVien_CLB.ThanhVien.Ten</td>
                                                <td>@Html.CheckBoxFor(model => Model[i].DiemDanh)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <input type="submit" value="Submit" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
