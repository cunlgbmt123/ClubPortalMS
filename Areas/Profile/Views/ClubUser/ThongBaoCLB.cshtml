@model IEnumerable<ClubPortalMS.Models.ThongBaoViewModel>
@{
    ViewBag.Title = "ThongBaoCLB";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
}

<h2>ThongBaoCLB</h2>

<table class="table">
    <tr>
        <th>
            Tên CLB
        </th>
        <th>
          Tiêu Đề
        </th>
        <th>
           Mô tả
        </th>
        <th>
           Ngày Thông Báo
        </th>
        <th>
            Nội dung
        </th>
        <th>
           File đính kèm
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
               @item.CLB.TenCLB
            </td>
            <td>
                @item.ThongBao.TieuDe
            </td>
            <td>
                @item.ThongBao.MoTa
            </td>
            <td>
                @item.ThongBao.NgayThongBao
            </td>
            <td>
                @item.ThongBao.NoiDung
            </td>
            <td>
                @item.ThongBao.File
            </td>
            <td>              
                @Html.ActionLink("Xem chi tiết", "#", new { id = item.ThanhVien_CLB.IDtvien })
            </td>
        </tr>
    }

</table>
