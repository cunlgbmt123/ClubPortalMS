@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Thông báo câu lạc bộ";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
    var DsThongBao = (IPagedList<ClubPortalMS.Models.ThongBaoViewModel>)ViewBag.DsThongBao;

}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Câu lạc bộ</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="callout callout-info">
                    <h5><i class="fas fa-list"></i> Danh sách Thông báo:</h5>
                    Đây là trang quản lý các thông báo của câu lạc bộ của bạn
                </div>
                <div class="invoice p-3 mb-3">
                    <div class="row">
                        <div class="col-12 table table-responsive">
                            <table id="myTable" class="table table-striped table table-bordered table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th>
                                            Tiêu Đề
                                        </th>
                                        <th>
                                            Mô tả
                                        </th>
                                        <th>
                                            Ngày Thông Báo
                                        </th>
                                        <th>
                                            Nội dung
                                        </th>
                                        <th>
                                            File đính kèm
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.DsThongBao)
                                    {
                                        <tr>
                                            <td>
                                                @item.ThongBao.TieuDe
                                            </td>
                                            <td>
                                                @item.ThongBao.MoTa
                                            </td>
                                            <td>
                                                @item.ThongBao.NgayThongBao
                                            </td>
                                            <td>
                                                @item.ThongBao.NoiDung
                                            </td>
                                            <td>
                                                @item.ThongBao.TenFile
                                            </td>
                                            <td>
                                                @Html.ActionLink("Xem chi tiết", "#", new { id = item.ThanhVien_CLB.IDtvien })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            @Html.PagedListPager(DsThongBao, page => Url.Action("ThongBaoCLB", new { page, id = ViewBag.idCLB }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

