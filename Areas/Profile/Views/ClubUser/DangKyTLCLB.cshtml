@model ClubPortalMS.Models.DkyCLB

@{
    ViewBag.Title = "Đăng ký thành lập CLB";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
}
<section class="content-header" style="background-color:cornflowerblue">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Đăng ký thành lập CLB</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li style="color:black" class="breadcrumb-item">Trang Chủ</li>
                    <li style="color:black" class="breadcrumb-item active">Đăng ký thành lập CLB</li>
                </ol>
            </div>
        </div>
    </div>
</section>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-12">
        <div class="card">
            <div class="card-header p-2">
                <h5> Đơn đăng ký thành lập Câu lạc bộ</h5>
            </div><!-- /.card-header -->
            <div class="card-body">
                <div class="tab-content">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="tab-pane active" id="settings">
                        <form class="form-horizontal">
                            <div class="form-group row">
                                <label for="inputName" class="col-sm-2 col-form-label">Tên câu lạc bộ:</label>
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.TenCLB, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TenCLB, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail" class="col-sm-2 col-form-label">Loại câu lạc bộ:</label>
                                <div class="col-sm-10">
                                    @Html.DropDownList("IDLoaiCLB", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IDLoaiCLB, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputName2" class="col-sm-2 col-form-label">Lý do thành lập:</label>
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.LyDoThanhLap, new { htmlAttributes = new { @class = "form-control", type="textarea" } })
                                    @Html.ValidationMessageFor(model => model.LyDoThanhLap, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="offset-sm-2 col-sm-10">
                                    <button type="submit" class="btn btn-danger">Xác nhận</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
