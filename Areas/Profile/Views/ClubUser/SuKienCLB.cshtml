
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Sự kiện câu lạc bộ";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
    var DsSuien = (IPagedList<ClubPortalMS.Models.SukienViewModel>)ViewBag.DsSuien;

}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Câu lạc bộ</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="callout callout-info">
                    <h5><i class="fas fa-list"></i> Danh sách sự kiện:</h5>
                </div>
                <div class="invoice p-3 mb-3">
                    <div class="row">
                        <div class="col-12 table table-responsive">
                            <table id="myTable" class="table table-striped table table-bordered table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th>
                                            Tiêu Đề
                                        </th>
                                        <th>
                                            Ngày bắt đầu
                                        </th>
                                        <th>
                                            Ngày kết thúc
                                        </th>
                                        <th>
                                            Mô tả
                                        </th>
                                        <th>
                                            Địa điểm
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.DsSuien)
                                    {
                                        <tr>
                                            <td>
                                                @item.SuKien.TieuDeSK
                                            </td>
                                            <td>
                                                @item.SuKien.NgayBatDau
                                            </td>
                                            <td>
                                                @item.SuKien.NgayKetThuc
                                            </td>
                                            <td>
                                                @item.SuKien.MoTa
                                            </td>
                                            <td>
                                                @item.SuKien.DiaDiem
                                            </td>
                                            <td>
                                                @Html.ActionLink("Xem chi tiết", "BaiVietSKCLB", new { id = item.SuKien.ID })
                                                @Html.ActionLink("Tham Gia", "ThamGiaSK", new { id = item.SuKien.ID })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            @Html.PagedListPager(DsSuien, page => Url.Action("SuKienCLB", new { page, id = ViewBag.idCLB }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

