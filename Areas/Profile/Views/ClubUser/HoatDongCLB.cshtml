
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Thông báo câu lạc bộ";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
    var DsHoatDong = (IPagedList<ClubPortalMS.Models.HoatDongViewModel>)ViewBag.DsHoatDong;

}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Câu lạc bộ</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="callout callout-info">
                    <h5><i class="fas fa-list"></i> Danh sách hoạt động:</h5>
                </div>
                <div class="invoice p-3 mb-3">
                    <div class="row">
                        <div class="col-12 table table-responsive">
                            <table id="myTable" class="table table-striped table table-bordered table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th>
                                            Tiêu Đề
                                        </th>
                                        <th>
                                            Ngày bắt đầu
                                        </th>
                                        <th>
                                            Ngày kết thúc
                                        </th>
                                        <th>
                                            Mô tả
                                        </th>
                                        <th>
                                            Địa điểm
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.DsHoatDong)
                                    {
                                    <tr>
                                        <td>
                                            @item.QLDSHoatDong.ChuDe
                                        </td>
                                        <td>
                                            @item.QLDSHoatDong.NgayBatDau
                                        </td>
                                        <td>
                                            @item.QLDSHoatDong.NgayKetThuc
                                        </td>
                                        <td>
                                            @item.QLDSHoatDong.Mota
                                        </td>
                                        <td>
                                            @item.QLDSHoatDong.DiaDiem
                                        </td>
                                        <td>
                                            @Html.ActionLink("Xem chi tiết", "BaiVietHDCLB", new { id = item.QLDSHoatDong.ID })
                                            @Html.ActionLink("Tham Gia", "ThamGiaHD", new { id = item.QLDSHoatDong.ID })
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                            @Html.PagedListPager(DsHoatDong, page => Url.Action("HoatDOngCLB", new { page, id = ViewBag.idCLB }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

