@using PagedList.Mvc;
@using PagedList;

@{
    var ListNhatKy = (IPagedList<ClubPortalMS.Models.TTNhatKy>)ViewBag.ListNhatKy;
    ViewBag.Title = "NhatKyCLB";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Câu lạc bộ</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="callout callout-info">
                    <h5><i class="fas fa-list"></i> Danh sách Thông báo:</h5>
                    Đây là trang quản lý các thông báo của câu lạc bộ của bạn
                </div>
                <div class="invoice p-3 mb-3">
                    <div class="row">
                        <div class="col-12 table table-responsive">
                            <table id="myTable" class="table table-striped table table-bordered table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th>
                                            Tên Sự Kiện/Hoạt Động
                                        </th>
                                        <th>
                                            Thời gian tham gia
                                        </th>
                                        <th>
                                            Điểm danh
                                        </th>
                                    </tr>

                                    @foreach (var item in ListNhatKy)
                                    {
                                        <tr>
                                            <td>
                                                @item.SKDaThamGia
                                            </td>
                                            <td>
                                                @item.TGThamGia
                                            </td>
                                            @if (@item.DiemDanh == true)
                                            {
                                                <td>
                                                    Đã tham gia
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    Chưa tham gia
                                                </td>
                                            }
                                        </tr>
                                    }

                            </table>
                            @Html.PagedListPager(ListNhatKy, page => Url.Action("NhatKyCLB", new { page, id = ViewBag.idCLB }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


