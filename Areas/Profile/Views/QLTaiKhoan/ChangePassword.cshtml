@model ClubPortalMS.Models.ChangePasswordModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <section class="content-header" style="background-color:cornflowerblue">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>TÀI KHOẢN</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li style="color:black" class="breadcrumb-item">Trang Chủ</li>
                        <li style="color:black" class="breadcrumb-item active">Tài khoản người dùng</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <div class="container-fluid">
        <h5 style="margin:10px 10px 10px 4px">Đổi mật khẩu</h5>
    </div>
    <div class="form-center" style="margin-left:12%">
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.OldPassword, "Mật khẩu hiện tại:", new { @class = "col-md-4 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.OldPassword, new { @class = "form-control", type = "password", id = "current-password" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NewPassword, "Mật khẩu mới:", new { @class = "col-md-4 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", type = "password", id = "new-password" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, "Xác nhận mật khẩu:", new { @class = "col-md-4 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", type = "password", id = "confirm-new-password" })
            </div>
        </div>
        <div class="form-group" style="margin-left:8px">
             <input type="checkbox" id="show-passwords" name="show-passwords"> Hiển thị mật khẩu
         </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Xác nhận" />
            </div>
        </div>
    </div>
    <script>
        const toggle = document.querySelector('#show-passwords');

        const passwords = Array.from(
            document.querySelectorAll('[type="password"]')
        );

        function togglePassword(checkbox, field) {
            field.type = checkbox.checked ? 'text' : 'password';
        }

        function handleChange() {
            passwords.forEach(password => {
                togglePassword(this, password);
            });
        }

        toggle.addEventListener('change', handleChange);
    </script>
}
