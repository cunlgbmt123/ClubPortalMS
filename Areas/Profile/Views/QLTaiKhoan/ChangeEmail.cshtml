@model ClubPortalMS.Models.ChangeEmailModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <section class="content-header" style="background-color:cornflowerblue">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>TÀI KHOẢN</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li style="color:black" class="breadcrumb-item">Trang Chủ</li>
                        <li style="color:black" class="breadcrumb-item active">Tài khoản người dùng</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <div class="container-fluid">
        <h5 style="margin:10px 10px 10px 4px">Đổi Email</h5>
    </div>
    @Html.ValidationSummary("", new { @class = "text-danger" })
<div class="form-center" style="margin-left:12%">
    <div class="form-group">
        @Html.LabelFor(m => m.OldPassword, "Mật khẩu hiện tại:", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.OldPassword, new { @class = "form-control", type = "password", id = "current-password" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NewEmail, new { @class = "form-control",type ="email" })
        </div>
    </div>
    <div class="form-group" style="margin-left:8px">
        <input type="checkbox" onclick="myFunction()"> Hiển thị mật khẩu
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Xác nhận" />
        </div>
    </div>
</div>
}
<script>
function myFunction() {
  var x = document.getElementById("current-password");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
</script>