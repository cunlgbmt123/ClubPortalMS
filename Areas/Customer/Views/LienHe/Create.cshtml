@model ClubPortalMS.Models.LienHe

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}
<div class="page-banner bg-img bg-img-parallax overlay-dark" style="height:150px">
    <div class="container h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-lg-8">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-dark bg-transparent justify-content-center py-0">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang Chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Liên Hệ</li>
                    </ol>
                </nav>
                <h1 class="fg-white text-center">LIÊN HỆ</h1>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="page-section">
        <div class="container">
            <div class="text-center">
                <h2 class="title-section mb-3">LIÊN HỆ VỚI CHÚNG TÔI</h2>
                <p>Hay để lại tin nhắn liên hệ với chúng tôi.</p>
            </div>
            <div class="row justify-content-center mt-5">
                <div class="col-lg-8">
                    <form action="#" class="form-contact">
                        <div class="row">
                            <div class="col-12 py-2">
                                <label for="subject" class="fg-grey">Tiêu Đề</label>
                                @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-12 py-2">
                                <label for="subject" class="fg-grey">Họ Và Tên</label>
                                @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6 py-2">
                                <label for="name" class="fg-grey">Số Điện Thoại</label>
                                @Html.EditorFor(model => model.HotLine, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.HotLine, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6 py-2">
                                <label for="email" class="fg-grey">Email</label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-12 py-2">
                                <label for="subject" class="fg-grey">Địa Chỉ</label>
                                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-12 py-2">
                                <label for="message" class="fg-grey">Nội Dung Muốn Gưỉ Đến Chúng Tôi</label>
                                @Html.EditorFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control", @row = "8" } })
                                @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-12 mt-3">
                                <input type="submit" value="Xác Nhận" class="btn btn-primary px-5">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div> <!-- .container -->
    </div>
}
