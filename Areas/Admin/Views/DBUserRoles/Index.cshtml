@model IEnumerable<ClubPortalMS.Models.DBUserRoles>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card-header">
    <div class="row">
        <div class="col-md-6">
            @Html.ActionLink("Create New", "Create")
            <strong class="text-danger text-uppercase">Tiêu Đề</strong>
        </div>
        <div class="col-md-6 text-right">
            <a href="#" class="btn btn-sm btn-success">Content</a>
        </div>
    </div>
</div>
<div class="card-body">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DBRoles.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DBUser.FirstName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DBRoles.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DBUser.FirstName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>

</div>
<!-- /.card-body -->
