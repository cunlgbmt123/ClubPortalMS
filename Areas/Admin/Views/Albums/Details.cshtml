@model IList<ClubPortalMS.ViewModel.Album.AlbumViewModel>

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper my-2">
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <p>
                            @Html.ActionLink("Edit", "Edit", new { id = Model[0].ID }) |
                            @Html.ActionLink("Back to List", "Index")
                        </p>

                        <strong class="text-danger text-uppercase">Chi Tiết</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="#" class="btn btn-sm btn-success">Content</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model[0].TieuDe)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model[0].TieuDe)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model[0].HinhAnh)
                    </dt>

                    <dd>
                        <img src="@Url.Content(Model[0].HinhAnh)" style="width: 100px; height: 100px; margin: 10px;" />
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model[0].Video)
                    </dt>

                    <dd>
                        <img src="@Url.Content(Model[0].Video)" style="width: 100px; height: 100px; margin: 10px;" />
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model[0].MoTa)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model[0].MoTa)
                    </dd>

                </dl>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
